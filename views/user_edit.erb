<section id="user_edit">
  <div class="container col-lg-4">
    <h1>Edit Profile</h1>
    <% @user.errors.full_messages.each do |message| %>
      <p style="color:red"><%= message %></p>
    <% end %>
    <form action="/user_update_<%= @user.name %>" method="post" enctype="multipart/form-data">
      <div class="form-group">
        <label for="user_edit_name">Name</label>
        <input id="user_edit_name" type="text" name="user_edit_name" value="<%= @user.name %>" class="form-control">
      </div>
      <div class="form-group">
        <label for="user_edit_image">Profile Image</label>
        <input id="user_edit_image" type="file" name="user_edit_image" class="form-control">
      </div>
      <button class="btn btn-outline-danger" type="submit">Edit</button>
    </form>
  </div>
</section>