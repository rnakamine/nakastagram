<p><%= @post.created_at.strftime("%Y-%m-%d %H:%M") %></p>
<img src="<%= @post.image_path %>"/>
<p><%= @post.content %></p>
<% if @post.user_id == @current_user.id %>
  [ <a href="/edit/<%= @post.id %>">Edit</a> ]
  <form action="/destroy/<%= @post.id %>" method="post" name="destroy">
    <input type="hidden">
    [ <a href="javascript:destroy.submit()">Destroy</a> ]
  </form>
<% end %>
<p></p>
<a href="/">Back</a>